<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coltrack.celuparking.Login1">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/layout_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Bienvenido, registrese y recordaremos sus datos de acceso la proxima vez"
            android:id="@+id/textView"
            android:background="@drawable/rounded_edittext"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText_telefono"
            android:background="@drawable/rounded_edittext"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Telefono"
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ingrese PIN Numerico"
            android:id="@+id/textView3"
            android:textColor="#ffffff"

            android:layout_below="@+id/editText_telefono"
            android:layout_alignLeft="@+id/editText_telefono"
            android:layout_alignStart="@+id/editText_telefono"
            android:textSize="18dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="10"
            android:id="@+id/editText_pin"
            android:inputType="numberPassword"
            android:background="@drawable/rounded_edittext"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_alignRight="@+id/editText_telefono"
            android:layout_alignEnd="@+id/editText_telefono" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Numero de Tarjeta de Credito"
            android:id="@+id/textView4"
            android:textColor="#ffffff"
            android:layout_below="@+id/editText_pin"
            android:layout_alignLeft="@+id/editText_pin"
            android:layout_alignStart="@+id/editText_pin" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText_tarjeta"
            android:background="@drawable/rounded_edittext"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignRight="@+id/editText_pin"
            android:layout_alignEnd="@+id/editText_pin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha ExpiraciÃ³n"
            android:id="@+id/textView5"
            android:textColor="#ffffff"
            android:layout_below="@+id/editText_tarjeta"
            android:layout_alignLeft="@+id/editText_tarjeta"
            android:cursorVisible="false"
            android:layout_alignStart="@+id/editText_tarjeta" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editText_expiracion"
            android:background="@drawable/rounded_edittext"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:editable="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxCondiciones"
            android:checked="true"
            android:layout_centerHorizontal="true"
            android:text="Acepta terminos y condiciones?"
            android:textColor="#ffffff"
            android:layout_below="@+id/editText_expiracion" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:background="@drawable/roundedbutton"
            android:id="@+id/button_siguiente"
            android:layout_below="@+id/checkBoxCondiciones"
            android:layout_alignLeft="@+id/editText_expiracion"
            android:layout_alignStart="@+id/editText_expiracion"
            android:layout_alignRight="@+id/editText_tarjeta"
            android:layout_alignEnd="@+id/editText_tarjeta"
            android:textColor="#ffffff" />



    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
